<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/circuit_item_selector"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_circuit_image"
        android:layout_width="@dimen/saved_circuit_image_width"
        android:layout_height="@dimen/saved_circuit_image_height"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/saved_circuits_inner_margin"
        android:adjustViewBounds="true"
        android:contentDescription="@string/saved_circuit_image_desc"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_circuit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/saved_circuits_inner_margin"
        android:layout_marginRight="@dimen/saved_circuits_inner_margin"
        android:text="@string/default_text"
        android:textAlignment="center"
        android:textSize="@dimen/saved_circuit_name_text_size" />

</LinearLayout>